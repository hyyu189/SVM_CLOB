# SVM CLOB Frontend Environment Configuration
# Copy this file to .env.local and modify as needed

# Backend API Configuration (svm_clob_infra)
VITE_API_BASE_URL=http://localhost:8080/api/v1
VITE_WS_BASE_URL=ws://localhost:8081/ws

# Development Mode (use mock data instead of real API)
VITE_USE_MOCK_API=false

# Solana Configuration
VITE_SOLANA_RPC_URL=https://api.devnet.solana.com
VITE_SOLANA_NETWORK=devnet

# API Timeout Settings
VITE_API_TIMEOUT=10000
VITE_WS_RECONNECT_ATTEMPTS=5
VITE_WS_RECONNECT_INTERVAL=5000

# Logging Level (debug, info, warn, error)
VITE_LOG_LEVEL=debug